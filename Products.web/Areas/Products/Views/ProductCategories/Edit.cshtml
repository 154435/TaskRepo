@model Products.web.Models.ProductCategory

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ProductCategory</h4>
<hr />
<div class="row" style="background-color:greenyellow">
    <div class="col-md-4">
        <form asp-action="Edit" style="background-color:mediumspringgreen">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PCId" style="background-color:chocolate"/>
            <div class="form-group" style="background-color:chocolate">
                <label asp-for="ProductCategoryName" class="control-label"></label>
                <input asp-for="ProductCategoryName" class="form-control" />
                <span asp-validation-for="ProductCategoryName" class="text-danger"></span>
            </div>
            <div class="form-group" style="background-color:chocolate">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
