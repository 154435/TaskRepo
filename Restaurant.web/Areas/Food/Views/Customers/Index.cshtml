<h3 style="background-color:lightcyan;font-family:'Comic Sans MS';font-style:italic;font-weight:bold">WELCOME  TO  OUR  RESTAURANT...!</h3>

<p>
     <button type="button" class="btn btn-outline-secondary"><a asp-action="Create"  style="font-weight:bold;color:darkmagenta">Create New</a></button> 
</p>
<table class="table" style="background-color:lightpink">
    <thead style="background-color:">
        <tr >
            <th >
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.CustomerAddress)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.MobileNUmber)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Eamil)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="background-color:lightcyan">
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNUmber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eamil)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerID" style="background-color:aliceblue;color:darkorange">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerID" style="background-color:aliceblue;color:darkorange">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerID" style="background-color:aliceblue;color:darkorange">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
  </body>