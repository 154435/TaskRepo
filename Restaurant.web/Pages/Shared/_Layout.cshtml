<!DOCTYPE html>
<html lang="en">
<head style="background-color:lightgray">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pizza </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
    
</head>
<body>
    <header style="background-color:gray">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="background-color:gray">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index" style="font-weight:bold;font-family:'Comic Sans MS';font-style:italic">Pizza</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse"style="background-color:khaki">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Options</a>
                            <div class="dropdown-menu" style="background-color:greenyellow">
                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="FoodCategories" asp-action="Index">
                                    Food Categories
                                </a>
                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="Foodmenus" asp-action="Index">
                                    Food Menus
                                </a>
                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="Customers" asp-action="Index">
                                    Customers
                                </a>
                                  <a class="dropdown-item"
                                   asp-area="Food" asp-controller="Orders" asp-action="Index">
                                    Book a Table
                                </a>


                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted" style="background-color:lightgray">
        <div class="container">
            &copy; 2022 - Restaurant.web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
